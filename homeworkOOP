class Shop:
    def __init__(self, name, x, y, size, kind):
        self.name = name
        self.coordX = x
        self.coordY = y
        self.size = size
        self.kind = kind


BooksShop = Shop("Books Shop!", 20, 15, "Small", "Books")




print(BooksShop.size)
