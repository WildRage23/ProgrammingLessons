class EvilCharacterWarrior:
    def __init__(self, name):
        self.name = name
        self.attack = 25
        self.health = 100
        self.weapon = "Топор"
        self.speedOfAttack = 10

    def attacking(self):
        print("Я ударил тебя на " + self.attack + " " + self.weapon + "ом")


class KotBaton:

    def __init__(self, name, age, color, weight, x, y):
        self.name = name
        self.age = age
        self.color = color
        self.weight = weight
        self.coordX = x
        self.coordY = y
        self.healthPoints = 100

    def meow(self):
        print("Meow!")

    def HealSelf(self):
        if int(self.healthPoints) < 100:
            self.healthPoints = 100
            print("Я вылечился ^^")

class Sobaken(KotBaton):
    def __init__(self, name, age, color, weight, x, y):
        super().__init__(name, age, color, weight, x, y)

    def bark(self):
        print("GAF!")



class Goblin:
